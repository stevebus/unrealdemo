{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "solution_name": {
            "type": "string",
            "metadata": {
                "description": "name of the solution"
            }
        },
        "utcValue": {
        "type": "string",
        "defaultValue": "[utcNow()]"
      }
    },
    "functions": [],
    "variables": {
    "prefix": "[concat(parameters('solution_name'), substring(uniqueString(resourceGroup().id), 0, 6))]",
    "location":"[resourceGroup().location]",
    "iotHub": {
        "name": "[concat(variables('prefix'), '-iothub')]",
        "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Devices/IotHubs/', variables('prefix'), '-iothub')]"
      }
    },
    "resources": [
              {
        "type": "Microsoft.Devices/IotHubs",
        "apiVersion": "2020-03-01",
        "name": "[variables('iotHub').name]",
        "location": "[variables('location')]",
        "properties": {
          "eventHubEndpoints": {
            "events": {
              "retentionTimeInDays": 1,
              "partitionCount": 2
            }
          },
          "cloudToDevice": {
            "defaultTtlAsIso8601": "PT1H",
            "maxDeliveryCount": 10,
            "feedback": {
              "ttlAsIso8601": "PT1H",
              "lockDurationAsIso8601": "PT60S",
              "maxDeliveryCount": 10
            }
          },
          "messagingEndpoints": {
            "fileNotifications": {
              "ttlAsIso8601": "PT1H",
              "lockDurationAsIso8601": "PT1M",
              "maxDeliveryCount": 10
            }
          }
        },
        "sku": {
          "name": "S1",
          "capacity": 1
        }
      }
    ],
    "outputs": {}
}